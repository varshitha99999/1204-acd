#include <stdio.h>
#include <string.h>

int main() {
    char symbol[20][20], type[20][20], value[20][20];
    int n = 0, choice, i, found;
    char s[20];

    while (1) {
        printf("\n1. Insert\n2. Display\n3. Search\n4. Modify\n5. Delete\n6. Exit\n");
        printf("Enter your choice: ");
        scanf("%d", &choice);

        switch (choice) {
            case 1:
                printf("Enter symbol name: ");
                scanf("%s", symbol[n]);
                printf("Enter type: ");
                scanf("%s", type[n]);
                printf("Enter value: ");
                scanf("%s", value[n]);
                n++;
                printf("Symbol inserted.\n");
                break;

            case 2:
                printf("\nSymbol\tType\tValue\n");
                for (i = 0; i < n; i++)
                    printf("%s\t%s\t%s\n", symbol[i], type[i], value[i]);
                break;

            case 3:
                printf("Enter symbol to search: ");
                scanf("%s", s);
                found = 0;
                for (i = 0; i < n; i++) {
                    if (strcmp(s, symbol[i]) == 0) {
                        printf("Symbol found: %s\t%s\t%s\n", symbol[i], type[i], value[i]);
                        found = 1;
                        break;
                    }
                }
                if (!found) printf("Symbol not found.\n");
                break;

            case 4:
                printf("Enter symbol to modify: ");
                scanf("%s", s);
                found = 0;
                for (i = 0; i < n; i++) {
                    if (strcmp(s, symbol[i]) == 0) {
                        printf("Enter new type: ");
                        scanf("%s", type[i]);
                        printf("Enter new value: ");
                        scanf("%s", value[i]);
                        printf("Symbol modified.\n");
                        found = 1;
                        break;
                    }
                }
                if (!found) printf("Symbol not found.\n");
                break;

            case 5:
                printf("Enter symbol to delete: ");
                scanf("%s", s);
                found = 0;
                for (i = 0; i < n; i++) {
                    if (strcmp(s, symbol[i]) == 0) {
                        for (int j = i; j < n - 1; j++) {
                            strcpy(symbol[j], symbol[j + 1]);
                            strcpy(type[j], type[j + 1]);
                            strcpy(value[j], value[j + 1]);
                        }
                        n--;
                        printf("Symbol deleted.\n");
                        found = 1;
                        break;
                    }
                }
                if (!found) printf("Symbol not found.\n");
                break;

            case 6:
                return 0;

            default:
                printf("Invalid choice.\n");
        }
    }
}
